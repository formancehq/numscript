{
  "$schema": "../../../specs.schema.json",
  "testCases": [
    {
      "it": "uses source allotment with percentages",
      "balances": {
        "a": { "COIN": 100 },
        "b": { "COIN": 100 },
        "c": { "COIN": 100 }
      },
      "expect.postings": [
        {
          "asset": "COIN",
          "amount": 61,
          "source": "a",
          "destination": "d"
        },
        {
          "asset": "COIN",
          "amount": 35,
          "source": "b",
          "destination": "d"
        },
        {
          "asset": "COIN",
          "amount": 4,
          "source": "c",
          "destination": "d"
        }
      ]
    }
  ]
}
