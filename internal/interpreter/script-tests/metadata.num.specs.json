{
  "$schema": "../../../specs.schema.json",
  "testCases": [
    {
      "it": "uses metadata for variables",
      "balances": {
        "sales:042": { "EUR/2": 2500 },
        "users:053": { "EUR/2": 500 }
      },
      "vars": {
        "sale": "sales:042"
      },
      "accountsMeta": {
        "sales:042": {
          "seller": "users:053"
        },
        "users:053": {
          "commission": "12.5%"
        }
      },
      "expect.postings": [
        {
          "asset": "EUR/2",
          "amount": 88,
          "source": "sales:042",
          "destination": "users:053"
        },
        {
          "asset": "EUR/2",
          "amount": 12,
          "source": "sales:042",
          "destination": "platform"
        }
      ]
    }
  ]
}
