{
  "$schema": "../../../specs.schema.json",
  "testCases": [
    {
      "it": "emit the correct postings",
      "balances": {
        "users:001": { "EUR/2": 1000 }
      },
      "vars": {
        "rider": "users:001",
        "driver": "users:002",
        "description": "midnight ride",
        "nb": "1",
        "ass": "EUR/2"
      },
      "expect.txMeta": {
        "description": "midnight ride",
        "ride": "1"
      },
      "expect.postings": [
        {
          "asset": "EUR/2",
          "amount": 999,
          "source": "users:001",
          "destination": "users:002"
        }
      ]
    }
  ]
}
