vars {
  account $v1 = virtual()
  account $v2 = virtual()
}

send [USD 1] (
  source = $v1 allowing unbounded overdraft
  destination = $v2
)

send [USD 1] (
  // here's we're sending the credit we have from $v1
  // so $v2 doesn't "owe" anything to @dest
  source = $v2
  destination = @dest
)

send [USD 1] (
  // that's why this doesn't output any postings
  source = @world
  destination = $v2
)
